<?php
/**
 * Implements hook_theme().
 */
function tripticket_dashboard_theme($existing, $type, $theme, $path) {
    return [
      'tripticket_dashboard' => [
        'template' => 'tripticket-dashboard',
        'path' => $path . '/templates',
        'render element' => 'variables',  // Ensure 'variables' is set if using the same key in the controller.
      ],
    ];
  }
  